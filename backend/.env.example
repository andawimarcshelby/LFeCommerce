APP_NAME="LMS Reporting System"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=Asia/Manila
APP_URL=http://localhost

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=pgsql
DB_HOST=db
DB_PORT=5432
DB_DATABASE=lms_reporting
DB_USERNAME=homestead
DB_PASSWORD=secret

BROADCAST_CONNECTION=log
CACHE_STORE=redis
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

REDIS_CLIENT=predis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@lmsreporting.test"
MAIL_FROM_NAME="${APP_NAME}"

# Octane Configuration
OCTANE_SERVER=swoole
OCTANE_WORKERS=auto
OCTANE_TASK_WORKERS=4
OCTANE_MAX_REQUESTS=500
OCTANE_HTTPS=false

# Queue Configuration  
QUEUE_HIGH_WORKERS=4
QUEUE_EXPORTS_WORKERS=3
QUEUE_DEFAULT_WORKERS=2

# Report Generation
REPORT_CHUNK_SIZE=50000
REPORT_PDF_MAX_ROWS_PER_SECTION=2000
REPORT_DOWNLOAD_TTL_HOURS=24
REPORT_MAX_CONCURRENT_EXPORTS_PER_USER=5

# Browsershot/Puppeteer
BROWSERSHOT_NODE_BINARY=/usr/bin/node
PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium
